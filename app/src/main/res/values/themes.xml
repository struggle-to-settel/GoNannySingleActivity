<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GoNannySingleActivity" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/defaultRed</item>
        <item name="colorPrimaryVariant">@color/defaultRed</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorAccent">@color/defaultRed</item>
        <!-- Secondary brand color. -->
        <item name="android:listDivider">@android:color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:statusBarColor" tools:targetApi="l">@android:color/transparent</item>
        <item name="actionMenuTextColor">@color/defaultRed</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="tabLayout">
        <item name="android:textColor">@color/white</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Subhead</item>
        <item name="android:fontFamily">@font/proxima_nova_medium</item>
    </style>

    <style name="smallRatingBar" parent="Widget.AppCompat.RatingBar.Small">
        <item name="android:progressDrawable">@drawable/rating_star_selector</item>
        <item name="minHeight">20dip</item>
        <item name="minWidth">60dip</item>
    </style>
    <style name="mediumRatingBar" parent="Widget.AppCompat.RatingBar.Indicator">
        <item name="android:progressDrawable">@drawable/rating_star_selector</item>
    </style>

    <style name="custom_dialog_theme" parent="Theme.AppCompat.Dialog">
        <item name="android:windowMinWidthMajor">280dp</item>
        <item name="android:windowMinWidthMinor">280dp</item>
    </style>

    <style name="splashTheme" parent="themeOverLapStatusBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="calenderView" parent="Theme.GoNannySingleActivity">
        <item name="colorAccent">@color/defaultRed</item>
        <item name="colorControlActivated">@color/defaultRed</item>
        <item name="colorPrimary">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="android:fontFamily">@font/proxima_nova_medium</item>
        <item name="android:dateTextAppearance">@style/TextAppearance.AppCompat.Title</item>
        <item name="android:textColorPrimaryInverse">@color/white</item>
    </style>

    <style name="timePickerDialog" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="colorAccent">@color/defaultRed</item>
        <item name="colorControlNormal">@color/defaultRed</item>
    </style>

    <style name="themeOverLapStatusBar" parent="Theme.GoNannySingleActivity">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="colorAccentTheme">
        <item name="colorAccent">@color/defaultRed</item>
    </style>

    <style name="buttonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/buttonSize</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/proxima_nova_medium</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
    </style>

    <style name="textViewApp">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/proxima_nova_medium</item>
        <item name="android:textColor">@color/oftenTextColors</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
    </style>

    <style name="toolbarTextFonts" parent="Widget.Design.CollapsingToolbar">
        <item name="android:fontFamily">@font/proxima_nova_semi_bold</item>
        <item name="android:titleTextAppearance">@style/TextAppearance.AppCompat.Title</item>
        <item name="android:textColor">@color/oftenTextColors</item>
    </style>

    <style name="navigationItemText">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Subhead</item>
        <item name="android:fontFamily">@font/proxima_nova_medium</item>
    </style>

    <style name="editTextApp">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/buttonSize</item>
        <item name="android:textColor">@color/oftenTextColors</item>
        <item name="android:textCursorDrawable">@drawable/cursor_drawable</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Subhead</item>
        <item name="android:fontFamily">@font/proxima_nova_medium</item>
    </style>


</resources>