<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:orientation="vertical">

        <include layout="@layout/common_toolbar" />

        <TextView
            style="@style/textViewApp"
            android:text="@string/available_working_hours"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

        <CheckBox
            android:layout_marginTop="16dp"
            android:id="@+id/cbWorkingHourOne"
            style="@style/textViewApp"
            android:layout_width="match_parent"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="16dp"
            android:checked="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/oftenTextColorsTwo"
            android:text="@string/working_hour_one"
            android:drawablePadding="16dp"
            android:padding="4dp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="16dp"
            android:background="@color/verticalBar"
            android:layout_marginVertical="8dp"/>

        <CheckBox
            android:id="@+id/cbWorkingHourTwo"
            android:layout_width="match_parent"
            style="@style/textViewApp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="16dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/oftenTextColorsTwo"
            android:text="@string/working_hour_two"
            android:drawablePadding="16dp"
            android:padding="4dp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="16dp"
            android:background="@color/verticalBar"
            android:layout_marginVertical="8dp"/>

        <CheckBox
            android:id="@+id/cbWorkingHourThree"
            android:layout_width="match_parent"
            style="@style/textViewApp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="16dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/oftenTextColorsTwo"
            android:text="@string/working_hour_three"
            android:drawablePadding="16dp"
            android:padding="4dp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="16dp"
            android:background="@color/verticalBar"
            android:layout_marginVertical="8dp"/>

        <CheckBox
            android:id="@+id/cbWorkingHourFour"
            android:layout_width="match_parent"
            style="@style/textViewApp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="16dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/oftenTextColorsTwo"
            android:text="@string/working_hour_four"
            android:drawablePadding="16dp"
            android:padding="4dp"
            />

        <Button
            android:id="@+id/btnSave"
            style="@style/buttonStyle"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="32dp"
            android:textColor="@color/white"
            android:text="@string/save"
            android:background="@drawable/red_button_shape_right"/>

        <TextView
            style="@style/textViewApp"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="20dp"
            android:drawablePadding="12dp"
            app:drawableStartCompat="@drawable/ic_info"
            android:lineSpacingExtra="4dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            android:text="@string/info_working_hour"
            android:layout_marginBottom="20dp"
            />

    </LinearLayout>
</ScrollView>